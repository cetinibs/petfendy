# Petfendy Environment Variables
# Copy this file to .env.local and fill in your actual values

# ======================
# Security Keys (REQUIRED - Generate new ones for production!)
# ======================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here
NEXT_PUBLIC_ENCRYPTION_KEY=your-encryption-key-here

# ======================
# Google Maps API
# ======================
# Get your API key from: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# ======================
# Database (For Production)
# ======================
# PostgreSQL connection string
# Example: postgresql://username:password@localhost:5432/petfendy
DATABASE_URL=postgresql://user:password@localhost:5432/petfendy

# ======================
# Email Service
# ======================
# SendGrid API Key
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@petfendy.com

# OR AWS SES
AWS_SES_ACCESS_KEY_ID=your-aws-access-key
AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_SES_REGION=eu-west-1

# ======================
# Payment Gateways
# ======================
# İyzico
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key
IYZICO_MERCHANT_ID=your-iyzico-merchant-id
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com  # Use https://api.iyzipay.com for production

# PayTR
PAYTR_MERCHANT_ID=your-paytr-merchant-id
PAYTR_MERCHANT_KEY=your-paytr-merchant-key
PAYTR_MERCHANT_SALT=your-paytr-merchant-salt

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ======================
# SMS Providers
# ======================
# Netgsm
NETGSM_USERNAME=your-netgsm-username
NETGSM_PASSWORD=your-netgsm-password

# İletimerkezi
ILETIMERKEZI_USERNAME=your-iletimerkezi-username
ILETIMERKEZI_PASSWORD=your-iletimerkezi-password

# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# ======================
# WhatsApp
# ======================
# Twilio WhatsApp
TWILIO_WHATSAPP_NUMBER=whatsapp:+15551234567

# WhatsApp Business API
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# ======================
# Redis (For caching and rate limiting)
# ======================
REDIS_URL=redis://localhost:6379

# ======================
# Admin Configuration
# ======================
# Admin phone number for notifications
NEXT_PUBLIC_ADMIN_PHONE=+905551234567

# ======================
# Monitoring & Analytics
# ======================
# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Vercel Analytics (Auto-configured on Vercel)
# No configuration needed

# ======================
# Application Settings
# ======================
# Base URL for production
NEXT_PUBLIC_BASE_URL=https://petfendy.com

# Node Environment
NODE_ENV=development  # Use 'production' for production

# ======================
# Feature Flags
# ======================
NEXT_PUBLIC_ENABLE_GUEST_CHECKOUT=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_LOYALTY_PROGRAM=false
